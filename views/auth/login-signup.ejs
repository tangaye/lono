    <script type="text/javascript">
        const domEl = {
            loginFormEl: document.querySelector('.login-form'),
            signUpFormEl: document.querySelector('.sign-up-form'),
            errorEl: document.querySelector('.error-message')
        }

        document.addEventListener('click', event => {

            if (event.target.classList.contains('login')) showLoginForm();

            if (event.target.classList.contains('signup')) showSignUpForm();

        });

        const showLoginForm = () => {

            clearError();

            // hide signup form
            hideSignUpForm();

            // show login form
            domEl.loginFormEl.style.display = 'block';
        }

        const showSignUpForm = () => {

            clearError();

            // hide login form
            hideLoginForm();

            // show signup form
            domEl.signUpFormEl.style.display = 'block';


        }

        const hideLoginForm = () => domEl.loginFormEl.style.display = 'none';

        const hideSignUpForm = () => domEl.signUpFormEl.style.display = 'none';

        const clearError = () => domEl.errorEl.innerHTML = '';
    </script>
</body>

</html>