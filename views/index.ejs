    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            font-family: "Montserrat";
            display: flex;
            overflow: hidden;
        }

        #login-page {
            width: 100%;
            height: 100%;
            background: url("/images/background.svg");
            background-attachment: fixed;
            background-size: contain;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #login-page .welcome {
            color: #ffffff;
            text-align: center;
            font-size: 50px;
            letter-spacing: 2px;
            margin-top: 120px;
            margin-bottom: 20px;
        }

        #login-page .welcome .brand {
            font-family: "Pacifico";
        }

        #login-page .user-handle {
            font-family: "Raleway";
            font-size: 20px;
            width: 40%;
            padding: 10px;
            border: 5px solid #d2e0da;
            color: #636060;
            border-radius: 10px;
        }

        #login-page .username-error {
            display: none;
            color: red;
            margin-top: 8px;
        }

        #chat-page {
            height: 100%;
            display: none;
        }

        #chat-page #main-header {
            background-color: #2892d7;
            color: #ffffff;
            display: flex;
            justify-content: space-between;
            position: fixed;
            width: 100%;
            padding: 10px;
        }

        #main-header .user-div {
            /* align-self: flex-start; */
        }

        #chat-page header .search-box {
            width: 325px;
            color: #969292;
            font-size: 15px;
            padding: 5px;
            border: 2px solid #d2e0da;
            border-radius: 10px;
        }

        /* SIDEBAR STYLES */

        #chat-page #sidebar {
            /* width: 20%; */
            width: 200px;
            /* width: 50%; */
            padding: 20px;
            display: flex;
            flex-direction: column;
            height: 100%;
            background-color: #173753;
            overflow-y: auto;
            color: #ffffff;
        }

        #chat-page aside .users {
            margin-top: 15px;
            list-style: none;
            flex-grow: 1;
            /* fill availble space, eventually pushing select list to the bottom */
        }

        #chat-page aside .users li {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding-bottom: 4px;
            width: 150px;
            font-size: 14px;
        }


        .users li .status {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-top: 7px;
        }

        .online {
            background-color: rgb(15, 185, 15);
        }

        .idle {
            background-color: rgb(172, 120, 9);
        }

        .offline {
            background-color: rgba(107, 103, 103, 0.8);
        }

        .user-status {

            background-color: #e5e5e5;
            border: 0;
            height: 30px;
            padding: 6px;
            border-radius: 2px;
        }

        li .user-details {
            display: flex;
            flex-direction: column;
            /* color: whitesmoke; */
        }

        li .user-details .last-seen {
            color: #969292;
            font-size: 12.5px;
            font-style: italic;
        }


        #chat-page #chat-container {
            /* width: 80%; */
            /* flex-shrink: 0; */
            width: 1150px;

        }

        /* CHAT AREA STYLES */
        #chat-page main {
            height: 100%;
            display: flex;
            overflow: hidden;
            padding-top: 50px;
        }

        #chat-page main .column {
            height: 100%;
            /*allows both columns to span the full height of the browser window*/
            display: flex;
            flex-direction: column;
            /*places the left and right headers above the bottom content*/
        }

        #chat-page main #chat-area {
            padding: 20px;
            overflow-y: auto;
        }

        /* CHAT STYLES */
        .conversation {
            list-style: none;
            padding: 0;
            margin-bottom: 50px;
        }

        .conversation li {
            display: flex;
            flex-direction: column;
            /* flex-wrap: wrap; */
            padding-bottom: 20px;
        }

        .conversation .message {
            background-color: #e5e5e5;
            color: #636060;
            padding: 5px;
            border-radius: 5px;
        }

        .conversation .message header {
            font-weight: bold;
            font-family: 'Raleway';
        }

        .conversation .message-status {
            margin-top: 2px;
            margin-left: 5px;
            font-weight: 100;
            color: #636060;
            font-size: 12px;
        }

        .message-status .status {
            font-style: italic;
        }

        /* FOOTER STYLES */
        #chat-page footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        #chat-page footer .chat-box {
            background-color: #e5e5e5;
            width: 100%;
            border: 0;
            padding: 15px;
            font-size: 15px;
        }
    </style>
</head>

