{
	"openapi": "3.0.0",
	"info": {
		"title": "Lono SMS API",
		"description": "SMS API to send messages and retrieve messages that have been sent using and API key. \nTo get a key or get support, kindly contact Kwagei Group at info@kwagei.com.",
		"version": "1.0"
	},

	"servers": [
		{
			"url": "{apiUrl}",
			"variables": {
				"apiUrl": {
					"default": "https://developer.lonotalk.com/api/v1"
				}
			}
		}
	],
	"paths": {
		"/sms": {
			"get": {
				"summary": "sms",
				"description": "Returns messages that have been sent.",
				"operationId": "sms",
				"parameters": [
					{
						"name": "apiKey",
						"in": "header",
						"description": "API key",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string",
							"example": "ZrAUvwdabS5GYgZAJy4Rjp"
						}
					}
				],
				"responses": {
					"200": {
						"description": "",
						"headers": {},
						"content": {
							"text/plain": {
								"schema": {
									"type": "object"
								}
							}
						}
					},
					"404": {
						"description": "",
						"headers": {},
						"content": {
							"text/plain": {
								"schema": {
									"type": "object"
								}
							}
						}
					},
					"403": {
						"description": "",
						"headers": {},
						"content": {
							"text/plain": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
				},
				"deprecated": false
			},
			"post": {
				"summary": "send sms",
				"description": "",
				"operationId": "sendsms",
				"parameters": [
					{
						"name": "apiKey",
						"in": "header",
						"description": "",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string",
							"example": "G3PWijbf2p9q8i"
						}
					}
				],
				"requestBody": {
					"description": "",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/sendsmsRequest"
							},
							"example": {
								"senderName": "Kwagei",
								"messages": [
									{
										"to": "0776001001",
										"body": "Hello world!",
										"extMessageId": "9629da1f-5efc-4084-a3dc-6a36102a5b6d"
									},
									{
										"to": "0886002002",
										"body": "Hello world!",
										"extMessageId": "9629da1f-5efc-4084-a3dc-6a36102a5b6d"
									}
								]
							}
						}
					},
					"required": true
				},
				"responses": {
					"200": {
						"description": "",
						"headers": {},
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
				},
				"deprecated": false
			}
		}
	},
	"components": {
		"schemas": {
			"sendsmsRequest": {
				"title": "sendsmsRequest",
				"required": ["senderName", "messages"],
				"type": "object",
				"properties": {
					"senderName": {
						"type": "string"
					},
					"messages": {
						"type": "array",
						"items": {
							"type": "object"
						},
						"description": ""
					}
				},
				"example": {
					"senderName": "Kwagei",
					"messages": [
						{
							"to": "0776001001",
							"body": "Hello world!",
							"extMessageId": "9629da1f-5efc-4084-a3dc-6a36102a5b6d"
						},
						{
							"to": "0886002002",
							"body": "Hello world!",
							"extMessageId": "9629da1f-5efc-4084-a3dc-6a36102a5b6d"
						}
					]
				}
			}
		},
		"securitySchemes": {
			"httpBearer": {
				"type": "http",
				"scheme": "bearer"
			}
		}
	},
	"security": [
		{
			"httpBearer": []
		}
	],
	"tags": []
}
